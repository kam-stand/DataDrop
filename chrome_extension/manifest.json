{
  "manifest_version": 3,
  "name": "DataDrop File Processor",
  "version": "1.0",
  "description": "Send downloaded files to backend for processing",
  "permissions": ["downloads", "activeTab", "storage"],
  "host_permissions": ["http://localhost:8080/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "DataDrop"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
