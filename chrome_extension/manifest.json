{
  "manifest_version": 3,
  "name": "DataDrop Extension",
  "version": "1.0",
  "description": "Manage base URLs, upload files, and auto-send downloads to backend.",
  "permissions": [
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8080/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icons/icon16.png",
      "48": "./icons/icon48.png",
      "128": "./icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
